<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%t] [%-5p] [%c] %m%n" />
        </Console>

    </Appenders>

    <Loggers>
        <!-- Application logs -->
        <Logger name="com.navadeep.ChatApplication" level="debug" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>

        <!-- Root logger -->
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
