<?xml version="1.0" encoding="UTF-8"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.navadeep.ChatApplication.domain.Conversation" table="conversations">

        <id name="id" column="id" type="long">
            <generator class="native">
                <param name="sequence_name">conversations_id_seq</param>
                <param name="increment_size">1</param>
            </generator>
        </id>
        <property name="createdAt" column="created_at"
                  type="long" not-null="true"/>

        <many-to-one name="type"
                     class="com.navadeep.ChatApplication.domain.Lookup"
                     column="type_id"
                     not-null="true"
                     fetch="join"
                     lazy="false"/>

        <property name="name" column="name" type="string"/>

        <property name="description" column="description" type="string"/>

        <many-to-one name="conversationImage"
                     class="com.navadeep.ChatApplication.domain.Attachment"
                     column="conversation_image_id"
                     fetch="join"
                     lazy="false"
                     />

        <many-to-one name="createdBy"
                     class="com.navadeep.ChatApplication.domain.UserLite"
                     column="created_by_id"
                     not-null="true"
                     fetch="join"
                     lazy="false"
                     />




        <bag name="conversationParticipants" table="conversation_participants" inverse="false" cascade="all" fetch="join" lazy="false">
            <key column="conversation_id" not-null="true"/>
            <one-to-many class="com.navadeep.ChatApplication.domain.ConversationParticipant"/>
        </bag>

        <many-to-one name="lastMessage"
                    class="com.navadeep.ChatApplication.domain.Message"
                     column="last_message_id"
                    fetch="join"
                    lazy="false"/>



    </class>
</hibernate-mapping>
