<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.navadeep.ChatApplication.domain.Message" table="messages">

        <id name="id" column="id" type="long">
            <generator class="increment"/>
        </id>

        <many-to-one name="sender" class="com.navadeep.ChatApplication.domain.UserLite"
                     column="sender_id" not-null="true" lazy="proxy"/>

        <many-to-one name="conversation" class="com.navadeep.ChatApplication.domain.Conversation"
                     column="conversation_id" not-null="true" lazy="proxy"/>

        <property name="body" column="body" type="string" not-null="true"/>

        <one-to-one name="messageAttachment" class="com.navadeep.ChatApplication.domain.Attachment"
                      lazy="proxy" />

        <property name="createdAt" column="created_at" type="java.time.LocalDateTime"
                  not-null="true"/>

        <property name="editedAt" column="edited_at" type="java.time.LocalDateTime"/>

        <property name="deleteForEveryone" column="delete_for_everyone" type="boolean"
                  not-null="true"/>

    </class>
</hibernate-mapping>