<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.navadeep.ChatApplication.domain.Message" table="messages">

        <id name="id" column="id" type="long">
            <generator class="native">
                <param name="sequence_name">messages_id_seq</param>
                <param name="increment_size">1</param>
            </generator>
        </id>
        <property name="createdAt" column="created_at" type="long"
                  not-null="true"/>

        <many-to-one name="sender" class="com.navadeep.ChatApplication.domain.UserLite"
                     column="sender_id" not-null="true"
                     fetch="join"
                     lazy="false"/>

        <property name="conversationId"
                  column="conversation_id"
                  type="long"
                  not-null="true"/>

        <property name="body" column="body" type="string"/>

        <one-to-one name="attachment"
                    class="com.navadeep.ChatApplication.domain.Attachment"
                    fetch="join"
                    lazy="false"/>


        <property name="editedAt" column="edited_at" type="long"/>

    </class>
</hibernate-mapping>