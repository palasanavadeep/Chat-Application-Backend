<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.navadeep.ChatApplication.domain.UserLite" table="users">
        <id name="id" type="long" column="id">
            <generator class="native">
                <param name="sequence_name">users_id_seq</param>
                <param name="increment_size">1</param>
            </generator>
        </id>

        <property name="username" column="username" not-null="true" unique="true"/>
        <property name="displayName" column="display_name"/>
        <property name="status" column="status" not-null="true" />
        <property name="createdAt" column="created_at" type="long" not-null="true"/>
        <property name="lastSeenAt" column="last_seen_at" type="long"/>

        <many-to-one name="profileImage"
                     class="com.navadeep.ChatApplication.domain.Attachment"
                     column="profile_image_id"
                     fetch="join"
                     lazy="false"/>

    </class>
</hibernate-mapping>