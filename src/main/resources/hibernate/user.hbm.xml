<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.navadeep.ChatApplication.domain.UserLite" table="user_lites">
        <id name="id" type="long" column="id">
            <generator class="native">
                <param name="sequence_name">user_lites_id_seq</param>
                <param name="increment_size">1</param>
            </generator>
        </id>

        <property name="username" column="username" not-null="true" unique="true"/>
        <property name="displayName" column="display_name"/>
        <property name="status" column="status" not-null="true" />
        <property name="lastSeenAt" column="last_seen_at" type="java.time.LocalDateTime"/>
        <property name="createdAt" column="created_at" type="java.time.LocalDateTime"/>

        <many-to-one name="profileImage"
                     class="com.navadeep.ChatApplication.domain.Attachment"
                     column="profile_image_id"
                     fetch="join"
        lazy="false"/>

        <!-- Inheritance -->
        <joined-subclass name="com.navadeep.ChatApplication.domain.User" table="users">
            <key column="id"/>
            <property name="email" column="email" not-null="true"/>
            <property name="password" column="password" not-null="true"/>
        </joined-subclass>
    </class>


