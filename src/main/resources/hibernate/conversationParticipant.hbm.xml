<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.navadeep.ChatApplication.domain.ConversationParticipant" table="conversation_participants">

        <id name="id" column="id" type="long">
            <generator class="native">
                <param name="sequence_name">conversation_participants_id_seq</param>
                <param name="increment_size">1</param>
            </generator>
        </id>

        <property name="conversationId" column="conversation_id" insert="false" update="false"/>

        <property name="createdAt"
                  column="created_at"
                  type="long"
                  not-null="true"/>


        <many-to-one name="user"
                     class="com.navadeep.ChatApplication.domain.UserLite"
                     column="user_id"
                     fetch="join"
                     lazy="false"
                     not-null="true"/>

        <many-to-one name="role"
                     class="com.navadeep.ChatApplication.domain.Lookup"
                     column="role_id"
                     not-null="true"
                     fetch="join"
                     lazy="false"/>


        <property name="leftAt" column="left_at" type="long"/>

        <property name="isMuted" column="is_muted" type="boolean" not-null="true"/>

        <property name="isPinned" column="is_pinned" type="boolean" not-null="true"/>

    </class>
</hibernate-mapping>