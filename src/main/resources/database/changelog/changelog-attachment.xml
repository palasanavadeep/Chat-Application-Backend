<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create_attachment_table_V2" author="navadeep" >

        <!-- Sequence for attachments -->
        <createSequence sequenceName="attachments_id_seq" startValue="1" incrementBy="1"/>

        <createTable tableName="attachments">
            <column name="id" type="BIGINT" autoIncrement="true" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="attachment_type_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_attachments_lookup"
                             references="lookups(id)"/>
            </column>
            <column name="file" type="BYTEA">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>