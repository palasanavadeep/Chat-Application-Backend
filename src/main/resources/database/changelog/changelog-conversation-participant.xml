<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create_conversation_participants_table_V1" author="navadeep">
        <createTable tableName="conversation_participants">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="conversation_id" type="BIGINT" >
                <constraints nullable="false"
                             foreignKeyName="fk_participants_conversation"
                             references="conversations(id)"
                />
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_participants_user"
                             references="users(id)"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_participants_lookup"
                             references="lookups(id)"/>
            </column>
            <column name="joined_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="left_at" type="TIMESTAMP"/>
            <column name="is_muted" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_pinned" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="last_read_message_id" type="BIGINT">
                <constraints foreignKeyName="fk_participants_message"
                             references="messages(id)"/>
            </column>
            <column name="last_read_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>