<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create_user_event_table_V1" author="navadeep">
        <createTable tableName="user_events">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_userevents_user"
                             references="users(id)"/>
            </column>
            <column name="message_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_userevents_message"
                             references="messages(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>