<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create_lookup_table_V1" author="navadeep">
        <!-- Sequence for Lookups -->
        <createSequence sequenceName="lookups_id_seq" startValue="1" incrementBy="1"/>

        <createTable tableName="lookups">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="lookup_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="lookup_category" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="lookup_code" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>